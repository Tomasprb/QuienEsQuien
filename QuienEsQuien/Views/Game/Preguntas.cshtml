@using QuienEsQuien.Models
@{
    ViewBag.Title = "Preguntas";
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="~/Content/Cosa.css" rel="stylesheet" />
    <link href="~/Styles/Buttons.css" rel="stylesheet" />
    <link href="~/Styles/Tables.css" rel="stylesheet" />
    <style>
        .drop {
            width: 100%;
            height: 30px;
            border: 1px solid white;
        }
    </style>
    <script>
        function allowDrop(ev) {
            ev.preventDefault();
        }

        function drag(ev) {
            ev.dataTransfer.setData("text", ev.target.id);
        }

        function drop(ev) {

            ev.preventDefault();
            var data = ev.dataTransfer.getData("text");
            if (ev.target.id == "drop") {
                ev.target.id = "drop_lleno";
                ev.target.appendChild(document.getElementById(data));
            }

        }
    </script>
</head>
<body class="w3-black">
    <div class="w3-padding-large" id="main">
        <table style="width:50%">
            <tr style="background-color:#222222">
                <td><center><h2><b>Preguntas</b></h2></center></td>
            </tr>
            @foreach (Preguntas x in ViewBag.Preguntas)
            {
                <tr style="height:30px">
                    <td class="Centrado" ondrop="drop(event)" ondragover="allowDrop(event)">
                        <div value="@x.IdPregunta" id="drag_@x.IdPregunta" draggable="true" ondragstart="drag(event)">@x.Texto</div>
                    </td>
                </tr>
            }
        </table>
        <br /> <br />
        <div style="position:fixed;top:12px;margin-left:50%">
            Arrastre una pregunta
            <div class="drop Centrado" id="drop" name="Pregunta" ondrop="drop(event)" ondragover="allowDrop(event)"></div>
            <br />
            <button class="button black" style="margin-left:59px">Siguiente</button>
        </div>
    </div>
</body>