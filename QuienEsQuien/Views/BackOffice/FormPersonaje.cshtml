@using QuienEsQuien.Models
@model Personajes
@{
    ViewBag.Title = "FormPersonaje";
}

<head>
    <link href="~/Styles/Estilos1.css" rel="stylesheet" />
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="~/Content/Cosa.css" rel="stylesheet" />
    <link href="~/Styles/Buttons.css" rel="stylesheet" />
</head>
<body class="w3-black">
    <div class="w3-padding-large" id="main">
        <center><h2>@ViewBag.Accion</h2></center> <br />
        <p>@ViewBag.Baja</p>


        @using (Html.BeginForm("CosasAPersonaje", "BackOffice", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            if (ViewBag.Accion == "Ver")

            {
                <img src="~/Content/@ViewBag.Imagen" alt="Foto Personaje" class="img-rounded" />
                <pr>Nombre</pr> @Html.TextBoxFor(x => x.Nombre, new { disabled = "disabled" }) <br />
                <pr>Imagen</pr> @Html.TextBoxFor(x => x.Archivo, new { type = "file", disabled = "disabled" }) <br />
                @Html.DropDownListFor(x => x.IdCategoria, new SelectList(ViewBag.Categorias, "IdCategoria", "Nombre"), new { disabled = "disabled" })
            }
            else
            {
                <pr>Nombre</pr> @Html.TextBoxFor(x => x.Nombre, new { required = "required" })<br />
                if (ViewBag.Accion == "Insertar")
                {
                    <pr>Imagen</pr> @Html.TextBoxFor(x => x.Archivo, new { type = "file", required = "required" }) <br />

                }
                else
                {
                    <img src="~/Content/@ViewBag.Imagen" alt="Foto Personaje" class="img-rounded" />
                    <pr>Imagen</pr> @Html.TextBoxFor(x => x.Archivo, new { type = "file" }) <br />
                }

                @Html.DropDownListFor(x => x.IdCategoria, new SelectList(ViewBag.Categorias, "IdCategoria", "Nombre"))

            }
            <input type="hidden" name="Accion" value="@ViewBag.Accion" />
            <input type="hidden" name="Id" value="@ViewBag.Id" />
            <button class="button black">Siguiente</button>
        }
    </div>
</body>