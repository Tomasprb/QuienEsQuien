@using QuienEsQuien.Models
@{
    ViewBag.Title = "Carga Respuestas";
}
<head>
    <link href="~/Styles/Estilos1.css" rel="stylesheet" />
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="~/Content/Cosa.css" rel="stylesheet" />
    <link href="~/Styles/Tables.css" rel="stylesheet" />
</head>
<body class="w3-black">
    <div class="w3-padding-large" id="main">
        @using (Html.BeginForm("EdicionPersonaje_Pregunta", "BackOffice", FormMethod.Post, new { enctype = "multipart/from-data" }))
        {
            <center><h2>@ViewBag.NombrePersonaje</h2></center><br />
            foreach (Preguntas MiPreg in ViewBag.ListaPreguntas)
            {
                List<int> MiLista = ViewBag.ListaPregsPersonaje;
                string chequeado = "";
                if (MiLista.Contains(MiPreg.IdPregunta))
                {
                    chequeado = "checked";
                }
                <input type="checkbox" name="Box" value="@MiPreg.IdPregunta" @chequeado /> @MiPreg.Texto<br />
    }
            <input type="hidden" name="IdPersonaje" value="@ViewBag.IdPersonaje"/>
    <input type="submit" value="finalizar" />
    }
</div>
</body>
