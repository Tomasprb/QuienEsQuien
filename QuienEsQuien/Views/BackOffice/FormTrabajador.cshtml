@using QuienEsQuien.Models
@model Categorias
@{
    ViewBag.Title = "FormTrabajador";
}

<head>
    <link href="~/Styles/Estilos1.css" rel="stylesheet" />
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="~/Content/Cosa.css" rel="stylesheet" />
    <link href="~/Styles/Buttons.css" rel="stylesheet" />
</head>
<body class="w3-black">
    <div class="w3-padding-large" id="main">
        <center><h2>@ViewBag.Accion</h2></center> <br />
        @using (Html.BeginForm("CosasATrabajador", "BackOffice", FormMethod.Post))
        {
        <p>@ViewBag.Baja</p>
            if (ViewBag.Accion == "Ver")
            {
                <pr>Nombre: </pr> @Html.TextBoxFor(x => x.Nombre, new { disabled = "disabled" }) <br /> <br />

            }
            else
            {
                <pr>Nombre: </pr> @Html.TextBoxFor(x => x.Nombre, new { type = "text",  required = "required" }) <br /> <br />

            }
            <input type="hidden" name="Accion" value=@ViewBag.Accion>
            <input type="hidden" name="Id" value=@ViewBag.Id>
            <button class="button black">Siguiente</button>
        }
    </div>
</body>

